# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# Supabase Configuration
# Get your keys from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Google Places API (Optional)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable "Places API" in Google Cloud Console
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your_api_key_here

# Email Service (Optional - for future use)
# Resend API: https://resend.com/api-keys
RESEND_API_KEY=your-api-key

# Security Configuration
# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW=60000
MAX_REQUESTS_PER_WINDOW=60
AUTH_RATE_LIMIT_WINDOW=900000
MAX_AUTH_ATTEMPTS=5

# Session Configuration
SESSION_SECRET=your-random-secret-key-min-32-chars
SESSION_MAX_AGE=86400000

# IMPORTANT SECURITY NOTES:
# 1. Never commit .env.local or .env files to git
# 2. Use strong, unique values for all secrets
# 3. Rotate API keys regularly
# 4. Use different credentials for development and production
# 5. Enable 2FA on all service accounts (Supabase, Vercel, etc.)

